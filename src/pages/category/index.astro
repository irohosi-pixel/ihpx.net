---
import BoxLink from '../../components/BoxLink.astro';
import Layout from '../../layouts/Layout.astro';
import { allCategories } from '../../site.config';

const title = 'カテゴリ一覧';
const meta: Meta = {
  title,
  description: '色星ぴくせるのブログのカテゴリ一覧です。',
  breadcrumb: [{ href: Astro.url.pathname, title }],
};
---

<Layout meta={meta}>
  <ul class="flex flex-wrap gap-3">
    {
      allCategories.map((category) => (
        <li>
          <BoxLink href={`/category/${category.id}/p1/`}>{category.name}</BoxLink>
        </li>
      ))
    }
  </ul>
</Layout>
