---
import Layout from '../../layouts/Layout.astro';
import { allAuthors } from '../../site.config';
import { Image } from 'astro:assets';

const title: string = '著者一覧';
const meta: Meta = {
  title,
  description: '色星ぴくせるのブログの著者一覧です。',
  breadcrumb: [{ href: Astro.url.pathname, title }],
};
---

<Layout meta={meta}>
  <ul class="flex flex-wrap gap-3">
    {
      allAuthors.map((author) => (
        <a href={`/author/${author.id}/p1/`}>
          <li class="linkItem px-2 py-1 bg-violet-300 rounded-lg shadow-md hover:shadow-none transition-shadow">
            <Image
              class="inline mr-1 rounded-full"
              src={author.iconURL}
              alt={`${author.name}のアイコン`}
              width={32}
              height={32}
            />
            {author.name}
          </li>
        </a>
      ))
    }
  </ul>
</Layout>
