---
import BoxLink from '../../components/BoxLink.astro';
import Layout from '../../layouts/Layout.astro';
import { allAuthors } from '../../site.config';
import { Image } from 'astro:assets';

const title: string = '著者一覧';
const meta: Meta = {
  title,
  description: '色星ぴくせるのブログの著者一覧です。',
  breadcrumb: [{ href: Astro.url.pathname, title }],
};
---

<Layout meta={meta}>
  <ul class="flex flex-wrap gap-3">
    {
      allAuthors.map((author) => (
        <li>
          <BoxLink href={`/author/${author.id}/p1/`}>
            <Image
              class="mr-1 inline rounded-full align-[-10px]"
              src={author.iconURL}
              alt={`${author.name}のアイコン`}
              width={32}
              height={32}
            />
            {author.name}
          </BoxLink>
        </li>
      ))
    }
  </ul>
</Layout>
