---
import MenuBtn from './MenuBtn.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
---

<header
  transition:persist
  class="fixed left-2 right-2 top-2 z-10 box-border rounded bg-white bg-opacity-50 px-4 py-2 backdrop-blur-sm sm:flex sm:content-between"
>
  <div class="flex flex-row content-between">
    <h1 class="text-2xl"><a href="/">色星ぴくせる Official Website</a></h1><div
      class="ml-auto mr-0 flex h-fit gap-2"
    >
      <ThemeIcon /><MenuBtn />
    </div>
  </div><Navigation />
</header>
<script is:inline>
  document.querySelector('.menu').addEventListener('click', () => {
    document.querySelector('header').classList.toggle('menu-expanded');
  });
</script>
<style>
  html:has(#themeToggle.dark) header {
    @apply bg-violet-950 bg-opacity-50;
  }
</style>
